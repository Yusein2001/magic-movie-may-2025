<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{currMovie.genre}}</p>
                        <p class="card-director">Directror: {{currMovie.director}}</p>
                        
                    </div>
                    <div class="second-info">
                        
                        <p class="card-year">Year: {{currMovie.year}}</p>
                        <p class="card-ranking">Rating: <span id="stars">{{rating}}</span></p>
                    </div>

                </div>

                <p class="disc">Description: {{currMovie.description}}</p>
                <p class="card-category">Category: {{currMovie.category}}</p>


            </div>
            {{#if isCreator}}
            <div class="details-btn">
                <a href="/movies/attach/cast/{{currMovie._id}}" class="details" >Add Cast</a>
                <a href="/movies/{{currMovie._id}}/edit" class="details">Edit</a>
                <a href="/movies/{{currMovie._id}}/delete" class="details">Delete</a>
            </div>
            {{/if}}
        </div>

        <div class="card_right">
            <img src="{{currMovie.imgUrl}}"
                alt="image">
        </div>

    </div>

        <div class="main-cast-card">
            {{#each currMovie.casts}}
                    <div class="cast-card">
                        <div class="card-img">
                            <img src="{{this.castImg}}"
                                alt="cast">
                        </div>
                        <div class="cast-info">
                            <h1>{{this.name}}</h1>
                            <h3>Age: {{this.age}}</h3>
                            <h3>Born: {{this.born}}</h3>
                        </div>
                    </div>
            {{/each}}
                  
        </div>

</section>